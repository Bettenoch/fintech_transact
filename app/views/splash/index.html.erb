<section class="old_list_container w-full flex items-center justify-center sm:mt-38 xs:mt-48 mt-32">
  <div class="old relative h-80 flex flex-col gap-4">
    <div class="splash-main flex justify-center text-center">
        <h1 class="text-xl md:text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Fintech Transact</h1>
    </div>
    <div class="splash-link md:w-full absolute bottom-0 flex flex-col gap-4 mt-24">
      <% if current_user.present? %>
        <div class="bg-[#5fb523] md:bg-none grid mt-6 mb-6 pt-6">
            <%= link_to 'Show Categories List', categories_path, class: " justify-self-center text-white border-2 border-white md:border-none md:text-gray-900 md:bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 font-medium rounded-lg text-sm px-20 py-2.5 text-center me-1 ms-2 mb-2" %>
        </div>
      <% else %>
        <a href="<%= new_user_session_path()%>" class="flex justify-center text-white bg-[#3778c2] md:text-gray-900 md:bg-gray-100 hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 md:font-medium font-sm rounded-lg text-sm px-20 py-2.5 dark:focus:ring-gray-500 me-2 mb-2">
          <div class="flex">
            <svg class="w-4 h-4 me-2 -ms-1 text-[#f3f6fB] md:text-[#626890]" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="ethereum" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M311.9 260.8L160 353.6 8 260.8 160 0l151.9 260.8zM160 383.4L8 290.6 160 512l152-221.4-152 92.8z"></path></svg>
            <span>Sign in</span>
          </div>
        </a>
        <a href="<%= new_user_registration_path()%>" class="flex justify-center text-white bg-[#3778c2] md:text-gray-900 md:bg-gray-100 hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 md:font-medium font-sm rounded-lg text-sm px-20 py-2.5 dark:focus:ring-gray-500 me-2 mb-2">

            <div class="flex">
              <svg class="w-4 h-4 me-2 -ms-1 text-[#f3f6fB] md:text-[#626890]" aria-hidden="true" focusable="false" data-prefix="fab" data-icon="ethereum" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M311.9 260.8L160 353.6 8 260.8 160 0l151.9 260.8zM160 383.4L8 290.6 160 512l152-221.4-152 92.8z"></path></svg>
              <span>Sign Up</span>
            </div>
        </a>
      <% end %>
    </div>
  </div>
</section>